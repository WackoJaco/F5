<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>pse__Assignment__c</field>
        <field>pse__Project__c</field>
        <field>pse__Resource__c</field>
        <field>pse__Milestone__c</field>
        <field>pse__Total_Hours__c</field>
        <field>Remote_Onsite__c</field>
        <field>pse__Billable__c</field>
        <field>Owner</field>
        <field>pse__Start_Date__c</field>
        <field>pse__End_Date__c</field>
        <field>Assignment_Hours_Remaining_from_Last_Wk__c</field>
        <field>pse__Monday_Hours__c</field>
        <field>pse__Monday_Notes__c</field>
        <field>pse__Location_Mon__c</field>
        <field>pse__Tuesday_Hours__c</field>
        <field>pse__Tuesday_Notes__c</field>
        <field>pse__Location_Tue__c</field>
        <field>pse__Wednesday_Hours__c</field>
        <field>pse__Wednesday_Notes__c</field>
        <field>pse__Location_Wed__c</field>
        <field>pse__Thursday_Hours__c</field>
        <field>pse__Thursday_Notes__c</field>
        <field>pse__Location_Thu__c</field>
        <field>pse__Friday_Hours__c</field>
        <field>pse__Friday_Notes__c</field>
        <field>pse__Location_Fri__c</field>
        <field>pse__Saturday_Hours__c</field>
        <field>pse__Saturday_Notes__c</field>
        <field>pse__Location_Sat__c</field>
        <field>pse__Sunday_Hours__c</field>
        <field>pse__Sunday_Notes__c</field>
        <field>pse__Location_Sun__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Manager Approval</label>
        <name>Manager_Approves_Timecard</name>
    </approvalStep>
    <description>For Projects without a project manager or the PM is submitting time.</description>
    <emailTemplate>PS_Enerprise_Workflows/PSA_Timecard_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(
pse__Submitted__c =TRUE,
OR(
LEN ( pse__Approver__c ) = 0,
(pse__Approver__r.Id = pse__Resource__r.pse__Salesforce_User__r.Id)))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PSE_Timecard_Set_Approved_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Timecard_Set_Include_in_FI_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Timecard_Set_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PSA_Timecard_UnSet_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_UnSet_IFF</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Timecard_Reject_Timecard</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Timecard_Send_Rejected_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PSE_Timecard_Unset_Submitted_Flag</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>PSA Manager Approves Timecard</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>PSA_Timecard_UnSet_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_UnSet_IFF</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Timecard_Recall</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Timecard_Unset_Submitted_Flag</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
