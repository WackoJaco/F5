<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>pse__Project__c</field>
        <field>pse__Resource__c</field>
        <field>pse__Assignment__c</field>
        <field>pse__Total_Billable_Amount__c</field>
        <field>pse__Total_Non_Billable_Amount__c</field>
        <field>pse__Total_Reimbursement_Amount__c</field>
        <field>pse__First_Expense_Date__c</field>
        <field>pse__Last_Expense_Date__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Manager Approval</label>
        <name>Manager_Approves_ER</name>
    </approvalStep>
    <description>For Projects without a Project Manager, Resource User Manger will Approve</description>
    <emailTemplate>All/PSA_Expense_Report_Approval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>(LEN(pse__Approver__c) = 0) &amp;&amp;
(
ISPICKVAL( pse__Status__c , &apos;Draft&apos;) || 
ISPICKVAL( pse__Status__c , &apos;Submitted&apos;) || 
ISPICKVAL( pse__Status__c , &apos;Rejected&apos;)
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PSA_Exp_Report_Set_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Exp_Set_Include_in_FI_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Exp_Report_Set_Approved_Flag</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PSA_ER_Disable_Auto_Submit_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Exp_Report_Send_Rejected_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PSA_Exp_Report_Set_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Exp_Report_Unset_Submitted_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Exp_Report_Unset_Action_Include_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Exp_Report_Unset_Approved_Flag</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PSA_Exp_Report_Set_Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Exp_Rpt_Set_Disable_Appr_Auto_Submit</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Exp_Report_Set_Submitted_Flag</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PSA F5 No PM Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>PSA_ER_Disable_Auto_Submit_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Exp_Report_Set_Status_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Exp_Report_Unset_Submitted_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Exp_Report_Unset_Action_Include_Flag</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSE_Exp_Report_Unset_Approved_Flag</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
